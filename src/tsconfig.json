{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"inlineSourceMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"types": [
			"jasmine",
			"node"
		],
		"typeRoots": [
			"../../node_modules/@types"
		],
		"lib": [
			"es2016",
			"dom"
		]
	},
	"exclude": [
		"../../node_modules",
		"../client"
	],
	"include": [
		"**/*.ts",
		"*.ts"
	]
}
